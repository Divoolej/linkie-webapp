<div class="grid-item">
  <div class="row">
    <div class="col s12 m12">
      <div class="card small {{color}} lighten-1">
        <div class="card-content white-text">
          <span class="card-title">{{title}}</span>
          <p>{{description}}</p>
        </div>
        <a class="link-delete material-icons teal-text text-lighten-5" {{action removeLink id}}>delete</a>
        <div class="card-action">
          <a href="{{url}}">This is a link</a>
        </div>
      </div>
    </div>
  </div>
</div>
