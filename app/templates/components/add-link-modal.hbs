<div id="modal1" class="modal">
  <div class="modal-content">
    <h4 class="modal-title">Add link</h4>

    <form class="col s12">

      <div class="row">
        <div class="input-field col s12">
          <input placeholder="Google" id="link_title" type="text" class="validate">
          <label class="active" for="link_title">Title</label>
        </div>
      </div>

      <div class="row">
        <div class="input-field col s12">
          <input placeholder="www.google.com" id="link_url" type="url" class="validate">
          <label class="active" for="link_url">URL</label>
        </div>
      </div>

      <div class="row">
        <div class="input-field col s12">
          <select>
            <option value="" disabled selected>Choose a category</option>

            {{#each categories as |category|}}
              <option value={{category.name}}>{{category.name}}</option>
            {{/each}}

          </select>
          <label>Category</label>
        </div>
      </div>

      <div class="modal-footer">
        <a {{action 'submitLink'}} href="#" class=" modal-action modal-close waves-effect waves-green btn-flat">Submit</a>
      </div>

    </form>


  </div>

</div>
